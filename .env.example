# ===========================================
# TANTUKA E-COMMERCE BACKEND - ENVIRONMENT CONFIGURATION
# ===========================================

# -----------------------
# Application Settings
# -----------------------
APP_NAME=Tantuka
APP_ENV=development
# development | staging | production
PORT=8080
GIN_MODE=debug
# debug | release

# -----------------------
# Database Configuration
# -----------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=tantuka_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=tantuka_db
DATABASE_SSL_MODE=disable
# disable | require (use 'require' in production)

# Database connection pool
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=3600

# -----------------------
# JWT Authentication
# -----------------------
JWT_SECRET=change-this-to-a-very-secure-random-string-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_HOURS=168
# 168 hours = 7 days

# -----------------------
# CORS Configuration
# -----------------------
CORS_ORIGINS=http://localhost:3000,https://nilabhsubramaniam.github.io
CORS_ALLOW_CREDENTIALS=true

# -----------------------
# Redis Configuration (for caching & sessions)
# -----------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false
# Set to true when Redis is setup

# -----------------------
# File Upload & Storage
# -----------------------
MAX_UPLOAD_SIZE=10485760
# 10MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# AWS S3 (for production)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=tantuka-products
S3_ENABLED=false

# -----------------------
# Email Configuration
# -----------------------
# SendGrid
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@tantuka.com
SENDGRID_FROM_NAME=Tantuka

# SMTP (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@tantuka.com

EMAIL_ENABLED=false

# -----------------------
# SMS Configuration
# -----------------------
# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
SMS_ENABLED=false

# -----------------------
# Payment Gateway
# -----------------------
# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
RAZORPAY_ENABLED=false

# Stripe (alternative)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_ENABLED=false

# -----------------------
# Logistics & Shipping
# -----------------------
# Shiprocket
SHIPROCKET_EMAIL=
SHIPROCKET_PASSWORD=
SHIPROCKET_ENABLED=false

# Delhivery
DELHIVERY_API_KEY=
DELHIVERY_ENABLED=false

# -----------------------
# Rate Limiting
# -----------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# -----------------------
# Logging
# -----------------------
LOG_LEVEL=info
# debug | info | warn | error
LOG_FORMAT=json
# json | console

# -----------------------
# Security
# -----------------------
BCRYPT_COST=10
# Higher = more secure but slower (10-12 recommended)
SESSION_SECRET=change-this-to-a-random-string

# -----------------------
# Frontend URL (for email links, etc.)
# -----------------------
FRONTEND_URL=http://localhost:3000
FRONTEND_PROD_URL=https://nilabhsubramaniam.github.io/Tantuka

# -----------------------
# Admin Settings
# -----------------------
ADMIN_EMAIL=admin@tantuka.com
ADMIN_PASSWORD=change_this_secure_password
# This will create default admin user on first run

# -----------------------
# Analytics
# -----------------------
GOOGLE_ANALYTICS_ID=
ANALYTICS_ENABLED=false

# -----------------------
# Monitoring & Error Tracking
# -----------------------
SENTRY_DSN=
SENTRY_ENABLED=false

# -----------------------
# Backup & Maintenance
# -----------------------
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
# Cron format: Daily at 2 AM
MAINTENANCE_MODE=false
